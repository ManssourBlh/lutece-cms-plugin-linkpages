   <!-- Plugin Informations -->
   <name>linkpages</name>
   <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
   <version>5.0.0</version>
   <documentation/>
   <installation/>
   <changes/>
   <user-guide/>
   <description>linkpages.plugin.description</description>
   <provider>linkpages.plugin.provider</provider>
   <provider-url>http://lutece.paris.fr</provider-url>
   <icon-url>images/admin/skin/plugins/linkpages/linkpages.png</icon-url>
